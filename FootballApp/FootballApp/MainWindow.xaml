<Window x:Class="FootBallAppGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootBallAppGUI"
        mc:Ignorable="d"
        Title="Football Insights Premier League" Height="300" Width="500">
    <Grid Background="#483D8B">
        <TextBlock Text="Welcome to Football Insights Premier League" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="White" FontSize="20" FontWeight="Bold"/>
        <Button Content="Login" x:Name="loginButton" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="20" Margin="0,213,0,0" Click="login_click"/>
        <Image Source="premierPhoto.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Width="313" Height="229"/>
    </Grid>
</Window>
